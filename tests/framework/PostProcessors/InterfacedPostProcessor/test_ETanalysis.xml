<Simulation verbosity="debug">

  <RunInfo>
    <WorkingDir>ETanalysis</WorkingDir>
    <Sequence>loadDataPS,generateDynamicData,compare</Sequence>
    <batchSize>1</batchSize>
  </RunInfo>

  <Files>
    <Input name='ET_data_file'>ET.csv</Input>
  </Files>

  <Models>
    <ExternalModel name='PythonModuleReduced' subType='' ModuleToLoad='example'>
      <variables>ACC,LPI,LPR,Tmax</variables>
    </ExternalModel>
    <PostProcessor name="ETanalysis" subType="InterfacedPostProcessor">
      <method>ETanalysis</method>
      <mode>classification</mode>
      <ETvariable simVarID='ACC' R0values='0,2'   >acc</ETvariable>
      <ETvariable simVarID='LPI' R0values='0,300' >lpi</ETvariable>
      <ETvariable simVarID='LPR' R0values='0,300' >lpr</ETvariable>
      <target     R1values='1400,1500'            >Tmax</target>
      <branchID                                   >id</branchID>
    </PostProcessor>
  </Models>

  <Distributions>
    <Uniform name='ACC_dist'>
      <lowerBound>0</lowerBound>
      <upperBound>50</upperBound>
    </Uniform>
    <Uniform name='LPI_dist'>
      <lowerBound>0</lowerBound>
      <upperBound>3000</upperBound>
    </Uniform>
    <Uniform name='LPR_dist'>
      <lowerBound>0</lowerBound>
      <upperBound>3000</upperBound>
    </Uniform>
  </Distributions>

  <Samplers>
    <MonteCarlo name='MC'>
      <samplerInit>
        <limit>20</limit>
      </samplerInit>
      <variable name='ACC'>
        <distribution>ACC_dist</distribution>
      </variable>
      <variable name='LPI'>
        <distribution>LPI_dist</distribution>
      </variable>
      <variable name='LPR'>
        <distribution>LPR_dist</distribution>
      </variable>
    </MonteCarlo>
  </Samplers>

  <Steps>
    <IOStep name='loadDataPS'>
      <Input     class='Files'         type=''             >ET_data_file</Input>
      <Output    class='DataObjects'   type='PointSet'     >ETdata</Output>
    </IOStep>
    <MultiRun name="generateDynamicData" pauseAtEnd="True">
      <Input   class="DataObjects"  type="PointSet"        >inputPlaceHolder</Input>
      <Model   class="Models"       type="ExternalModel"   >PythonModuleReduced</Model>
      <Sampler class="Samplers"     type="MonteCarlo"      >MC</Sampler>
      <Output  class="DataObjects"  type="PointSet"        >outRun</Output>
    </MultiRun>
    <PostProcess name="compare">
      <Input   class="DataObjects"  type="PointSet"        >outRun</Input>
      <Input   class="DataObjects"  type="PointSet"        >ETdata</Input>
      <Model   class="Models"       type="PostProcessor"   >ETanalysis</Model>
      <Output  class="DataObjects"  type="PointSet"        >ETdata_dynamic</Output>
    </PostProcess>
  </Steps>

  <OutStreams>
    <Print name="PrintPPS_dump">
      <type>csv</type>
      <source>outPPS</source>
    </Print>
  </OutStreams>

  <DataObjects>
    <PointSet name="inputPlaceHolder">
      <Input>ACC,LPI,LPR</Input>
      <Output>OutputPlaceHolder</Output>
    </PointSet>
    <PointSet name="outRun">
      <Input>ACC,LPI,LPR</Input>
      <Output>Tmax</Output>
    </PointSet>
    <PointSet name="ETdata">
      <Input>acc,lpi,lpr</Input>
      <Output>outcome,id</Output>
    </PointSet>
    <PointSet name="ETdata_dynamic">
      <Input>acc,lpi,lpr</Input>
      <Output>outcome,id</Output>
    </PointSet>
  </DataObjects>

</Simulation>
