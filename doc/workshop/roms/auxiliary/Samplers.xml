  <Samplers>
    
    <Grid name="coarseGrid">
      <variable name="x1" >
        <distribution>normal_trunc</distribution>
        <grid type="value" construction="equal" steps="5">0.0 1.0</grid>
      </variable>
      <variable name="x2" >
        <distribution>normal</distribution>
        <grid type="value" construction="equal" steps="5">1.5 2.5</grid>
      </variable>
      <variable name="x3" >
        <distribution>uniform</distribution>
        <grid type="value" construction="equal" steps="5">1.0 4.0</grid>
      </variable>
    </Grid>

    <Grid name="fineGrid">
      <variable name="x1" >
        <distribution>normal_trunc</distribution>
        <grid type="value" construction="equal" steps="10">0.0 1.0</grid>
      </variable>
      <variable name="x2" >
        <distribution>normal</distribution>
        <grid type="value"  construction="equal" steps="10">1.5 2.5</grid>
      </variable>
      <variable name="x3" >
        <distribution>uniform</distribution>
        <grid type="value" construction="equal" steps="10">1.0 4.0</grid>
      </variable>
    </Grid>
  </Samplers>