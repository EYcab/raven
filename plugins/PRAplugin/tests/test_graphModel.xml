<Simulation verbosity="debug">

  <RunInfo>
    <WorkingDir>graphModel</WorkingDir>
    <Sequence>simRun</Sequence>
    <batchSize>1</batchSize>
  </RunInfo>

  <Distributions>
    <Bernoulli name="distrib">
      <p>0.5</p>
    </Bernoulli>
  </Distributions>

  <Samplers>
    <MonteCarlo name="MC_external">
      <samplerInit>
        <limit>2</limit>
      </samplerInit>
      <variable name="2_status">
        <distribution>distrib</distribution>
      </variable>
      <variable name="3_status">
        <distribution>distrib</distribution>
      </variable>
      <variable name="4_status">
        <distribution>distrib</distribution>
      </variable>
      <variable name="5_status">
        <distribution>distrib</distribution>
      </variable>
    </MonteCarlo>
  </Samplers>
  
  <Models>
    <ExternalModel name="graph" subType="graphModel">
      <variables>2_status,3_status,4_status,5_status,SG1_flow,SG2_flow,SG3_flow</variables>
      <!-- xml portion for this plugin only -->
      <modelFile>graphTest</modelFile>
      <nodesIN>CST</nodesIN>
      <nodesOUT>SG1,SG2,SG3</nodesOUT>
    </ExternalModel>
  </Models>

  <Steps>
    <MultiRun name="simRun">
      <Input   class="DataObjects"  type="PointSet"        >inputPlaceHolder</Input>
      <Model   class="Models"       type="ExternalModel"   >graph</Model>
      <Sampler class="Samplers"     type="MonteCarlo"      >MC_external</Sampler>
      <Output  class="DataObjects"  type="PointSet"        >sim_PS</Output>
      <Output  class="OutStreams"   type="Print"           >Print_sim_PS</Output>
    </MultiRun>
  </Steps>

  <OutStreams>
    <Print name="Print_sim_PS">
      <type>csv</type>
      <source>sim_PS</source>
    </Print>
  </OutStreams>
  
  <DataObjects>
    <PointSet name="inputPlaceHolder">
      <Input>2_status,3_status,4_status,5_status</Input>
      <Output>OutputPlaceHolder</Output>
    </PointSet>
    <PointSet name="sim_PS">
      <Input>2_status,3_status,4_status,5_status</Input>
      <Output>SG1_flow,SG2_flow,SG3_flow</Output>
    </PointSet>
  </DataObjects>
  
</Simulation>
